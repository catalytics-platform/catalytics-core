# Migration runner for Catalytics Core using SQLx CLI
# Using ARM64 architecture with static linking for compatibility

FROM rust:1.91-alpine AS builder

# Install build dependencies for ARM64
RUN apk add --no-cache \
    musl-dev \
    pkgconfig \
    openssl-dev \
    postgresql-dev

# Set target for ARM64 static linking
ENV RUSTFLAGS="-C target-feature=+crt-static"

# Install SQLx CLI with static linking for ARM64 and TLS support
RUN cargo install sqlx-cli \
    --no-default-features \
    --features postgres,rustls \
    --target aarch64-unknown-linux-musl

# Runtime stage - minimal Alpine image
FROM alpine:latest

# Install minimal runtime dependencies
RUN apk add --no-cache \
    ca-certificates \
    && adduser -D -s /bin/sh app

# Set working directory
WORKDIR /app

# Copy SQLx CLI from builder stage
COPY --from=builder /usr/local/cargo/bin/sqlx /usr/local/bin/sqlx

# Copy migrations
COPY migrations/ ./migrations/

# Set ownership
RUN chown -R app:app /app

# Switch to non-root user
USER app

# Command to run migrations
CMD ["sqlx", "migrate", "run"]